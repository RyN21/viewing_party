<h1> Create New Viewing Party </h1>

<b><p> Movie Title: <%= @movie_title %></p></b>
<%= form_for [:user, @party] do |f| %>
  <%= f.hidden_field :movie_title, :value => @movie_title %> <br/>

  <%= f.label :duration_in_minutes %>:
  <%= f.text_field :duration %><br />

  <%= f.date_select :when, :order => [:day, :month, :year] %>

  <%= f.label :attendees %>:
  <%= f.text_field :attendees %><br />

  <%= f.submit %>
<% end %>
