<h1>Welcome <%= @user.name %>!</h1>

<%= link_to "Discover Movies", "/user/discover" %>

<div class="friends">
  <h3>Friends</h3>
  <%= form_tag('/user', method: "post") do %>
    Add Friend's Email: <%= text_field_tag(:username, :email) %>
    <%= submit_tag("Add Friends")%>
  <%end%>
</div>

<div>
  <un>
    <% @user.get_friends.each do |friend| %>
      <%= friend.username %>
    <% end %>
  </un>
</div>

<div class="viewing-parties">
  <h3>Viewing Parties</h3>
  <% @user.parties.each do |party| %>
  <%= link_to "Party on '#{party.when}'", "/user/parties/#{party.id}" %>
  <%= button_to "Delete Party", "/user/parties/#{party.id}/", method: :delete %>
  <br>
  <% end %>
</div>
